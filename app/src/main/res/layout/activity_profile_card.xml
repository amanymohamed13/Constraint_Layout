<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/margin18"
    tools:context=".Profile_Card"
    tools:ignore="TextSizeCheck">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_card124"
        android:layout_height="@dimen/image_card124"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/num1_pos"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num1"
        android:textSize="@dimen/text20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/num2_follow"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num2"
        android:textSize="@dimen/text20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/num3_follow"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num3"
        android:textSize="@dimen/text20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/num1_data"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num1_details"
        android:textSize="@dimen/text18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintTop_toBottomOf="@+id/num1_pos"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/num2_data"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num2_details"
        android:textSize="@dimen/text16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintTop_toBottomOf="@+id/num2_follow"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/num3_data"
        style="@style/text_info"
        android:layout_width="wrap_content"
        android:text="@string/num3_details"
        android:textSize="@dimen/text16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/num3_follow"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/des"
        style="@style/third_style"
        android:text="@string/ui_des"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintVertical_bias=".04" />

    <TextView
        android:id="@+id/designer"
        style="@style/third_style"
        android:text="@string/design"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/des" />

    <TextView
        android:id="@+id/desc1"
        style="@style/fourth_style"
        android:drawableStart="@drawable/wave"
        android:text="@string/desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designer"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/desc2"
        style="@style/fourth_style"
        android:text="@string/desc2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc1" />

    <TextView
        android:id="@+id/last_desc"
        style="@style/fourth_style"
        android:drawableStart="@drawable/mic"
        android:text="@string/desc3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".06"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/link"
        style="@style/fourth_style"
        android:text="@string/last_link"
        android:textColor="@color/purple_500"
        app:layout_constraintHorizontal_bias=".06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_desc"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <Button
        style="@style/fourth_style"
        android:backgroundTint="@color/follow_button"
        android:drawableEnd="@drawable/instagram"
        android:text="@string/follow"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintTop_toBottomOf="@+id/link"
        app:layout_constraintVertical_bias=".04" />
</androidx.constraintlayout.widget.ConstraintLayout>