<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ConstraintLayout" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ConstraintLayout" parent="Base.Theme.ConstraintLayout" />


    <style name="text_style" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/regul</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text26</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="text_child" parent="text_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginTop">@dimen/margin12</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
    </style>

    <style name="text_info" parent="text_style">
        <item name="android:drawablePadding">@dimen/margin24</item>


    </style>
    <style name="second_card" parent="text_info">
        <item name="android:layout_marginTop">@dimen/margin12</item>
    </style>
    <style name="third_style" parent="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>
    <style name="fourth_style" parent="third_style">
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:drawablePadding">@dimen/margin6</item>
    </style>
</resources>